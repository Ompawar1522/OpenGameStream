<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:OGS.Plaform.Windows.ViewModels"
        x:DataType="viewModels:WinQuickSwitchVm"
        x:Class="OGS.Plaform.Windows.Views.WinQuickSwitchControl">

	<Design.DataContext>
		<viewModels:WinQuickSwitchVm/>
	</Design.DataContext>

	<Grid RowDefinitions="*, Auto" ColumnDefinitions="1*">
		<StackPanel Orientation="Vertical">
			<TextBlock HorizontalAlignment="Center" Text="Capture source"/>
			<StackPanel Margin="5" HorizontalAlignment="Center" Orientation="Horizontal">
				<RadioButton Command="{Binding SetDisplayCaptureCommand}" GroupName="captureMode" Content="Display" IsEnabled="True" IsChecked="True"/>
				<RadioButton Command="{Binding SetWindowCaptureCommand}" GroupName="captureMode" Content="Window" Margin="5, 0, 0, 0" IsEnabled="True"/>
				<RadioButton Command="{Binding SetGameCaptureCommand}" GroupName="captureMode" Content="Game" Margin="5, 0, 0, 0" IsEnabled="True"/>
			</StackPanel>

			<ComboBox Margin="5" HorizontalAlignment="Stretch" ItemsSource="{Binding CurrentCaptureItems}" SelectedItem="{Binding SelectedCaptureItem}"/>
			
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Label Padding="0" Margin="5, 0, 5, 0"
				       Content="{Binding BitrateMbps, StringFormat='Bitrate: {0:F2} mbps'}" />
			</StackPanel>
			<Slider Padding="0" Margin="5, 0, 5, 0" Value="{Binding BitrateMbps}" Minimum="1" Maximum="50"
			        SmallChange="0.1" LargeChange="1" TickFrequency="0.25" IsSnapToTickEnabled="True" />
		</StackPanel>
		
		<Button Grid.Row="1" Command="{Binding ApplyCommand}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="5, 5, 5, 0">Apply</Button>
	</Grid>
</UserControl>
